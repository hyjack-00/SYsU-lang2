{
  "editor.unfoldOnClickAfterEndOfLine": false,

  "files.eol": "\n",
  "files.autoSave": "afterDelay",
  "files.associations": {
    "*.json": "jsonc",
    "TODO": "markdown",
    ".clang-tidy": "yaml",
    "cpp": "cpp",
    "*.l": "lex",
    "*.y": "yacc",
    "CMakeLists.txt": "cmake",
    "__bit_reference": "cpp",
    "__config": "cpp",
    "__debug": "cpp",
    "__errc": "cpp",
    "__hash_table": "cpp",
    "__locale": "cpp",
    "__mutex_base": "cpp",
    "__node_handle": "cpp",
    "__split_buffer": "cpp",
    "__threading_support": "cpp",
    "__tree": "cpp",
    "__verbose_abort": "cpp",
    "charconv": "cpp",
    "complex": "cpp",
    "csignal": "cpp",
    "forward_list": "cpp",
    "future": "cpp",
    "ios": "cpp",
    "locale": "cpp",
    "queue": "cpp",
    "span": "cpp",
    "stack": "cpp",
    "variant": "cpp",
    "unordered_map": "cpp"
  },

  //* C/C++
  "cmake.preferredGenerators": ["Ninja"],

  //* python
  "[python]": {
    "editor.tabSize": 4,
    "editor.rulers": [88],
    "editor.formatOnType": true
  },
  "flake8.args": ["--ignore=E203,W503", "--max-line-length=88"],
  "autoDocstring.docstringFormat": "one-line-sphinx"
}
